        <!--                action = {-->
        <!--                "type": "ir.actions.act_window",-->
        <!--                "view_mode": "tree,form",-->
        <!--                "res_model": model._name,-->
        <!--                }-->
        <!--            </field>-->
        <!--        </record>-->


        <record model="ir.actions.act_window" id="shipments_list_action">
            <field name="name">shipments</field>
            <field name="res_model">shipments.shipments</field>
            <field name="view_mode">tree,form,kanban</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">Create the first shipment
                </p>
            </field>
        </record>

        <!-- top level menu: no parent -->
        <menuitem id="main_shipment_menu" name="shipments" web_icon="shipments,static/description/icon.png"/>
        <!-- A first level in the left side menu is needed
             before using action= attribute -->
        <menuitem id="shipment_menu" name="Open shipment"
                  parent="main_shipment_menu"/>
        <!-- the following menuitem should appear after
             its parent openacademy_menu and after its
             action course_list_action -->
        <menuitem id="shipments_menu" name="shipments" parent="shipment_menu"
                  action="shipments_list_action"/>
        <!-- Full id location:
             action="openacademy.course_list_action"
             It is not required when it is the same module -->

    </data>
</odoo>